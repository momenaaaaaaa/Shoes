
@model IEnumerable<LR6_.Models.Shoes>
@{
    ViewData["Title"] = "ShoppingList";
    Layout = null;
}

<html>
<head>
    <title>AirLove</title>
    <style>
        body {
            font-family: 'Courier New', sans-serif;
            background: rgb(173,173,173);
            background: radial-gradient(circle, rgba(173,173,173,0.6755952380952381) 0%, rgba(87,87,87,1) 100%);
        }

        h3 {
            text-align: center;
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #cccccc;
        }

        th {
            background-color: #2e2d2d;
            color: #ffffff;
        }

        a {
            text-decoration: none;
            color: #2e2d2d;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h3>Кроссовки</h3>
    <table>
        <tr>
            <td>Model</td>
            <td>Name</td>
            <td>Price</td>
            <td></td>
        </tr>
        @foreach (var shoes in Model)
        {
            <tr>
                <td>@shoes.Name</td>
                <td>@shoes.Company</td>
                <td>@shoes.Price</td>
            </tr>
        }
    </table>
    <a href="~/Home/Index">Back</a>
</body>
</html>
