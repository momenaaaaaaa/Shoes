@{
    ViewData["Title"] = "AirLove";
    Layout = null;
}

<html>
<head>
    <title>AirLove</title>
    <style>
        body {
            font-family: 'Courier New', sans-serif;
            background: rgb(173,173,173);
            background: radial-gradient(circle, rgba(173,173,173,0.6755952380952381) 0%, rgba(87,87,87,1) 100%);
        }
        
        fieldset {
            max-width: 700px;
            margin: 0 auto;
            padding: 20px;
            background-color: #2e2d2d;
            box-shadow: 0px 0px 10px white;
            color: white;
        }
        
        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 28px;
            text-transform: uppercase;
        }
        
        form {
            margin-bottom: 20px;
        }
        
        p {
            margin: 10px 0;
            font-size: 16px;
        }
        
        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: none;
            margin-bottom: 10px;
        }
        
        label {
            display: inline-block;
            margin-right: 10px;
        }
        
        input[type="submit"] {
            background-color: #4f4e4e;
            color: #fff;
            padding: 10px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }

        input[name="prod"] {
            background-color: #4f4e4e;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }
        
        .message {
            margin-top: 10px;
            text-align: center;
            font-size: 14px;
        }

        .btn {
            display: inline-block; 
            background: #4f4e4e;
            color: #fff; 
            padding: 1rem 1.5rem; 
            text-decoration: none; 
        }
    </style>
</head>
<body>
    <fieldset>
        <h1>☯ AirLove ☯</h1>
        <form method="post">
            <p>Your Phone Number</p>
            <input type="text" maxlength="11" name="Phone" />
            <p>Your Password</p>
            <input type="password" name="Parol" />
            <input type="submit" value="Log in (っ´ω｀)" /><br/>
        </form>
        @if (!string.IsNullOrEmpty(ViewBag.Message1))
        {
            <script>alert('@Html.Raw(ViewBag.Message1)');</script>
        }
        <a href="~/Home/ListT" class="btn"> Shopping List</a>
        <p> or </p>
        <a href="~/Home/Registr" class="btn">Registration</a>
    </fieldset>
</body>
</html>
