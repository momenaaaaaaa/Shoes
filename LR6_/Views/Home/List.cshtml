@model IEnumerable<LR6_.Models.Shoes>
@{
    ViewData["Title"] = "Список кроссовок";
    Layout = null;
}

<html>
<head>
    <title>AirLove</title>
    <style>
        body {
            font-family: 'Courier New', sans-serif;
            background-color: #a1a1a1;
            font-weight: bold
        }

        h3 {
            text-align: center;
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #cccccc;
        }

        th {
            background-color: #2e2d2d;
            color: #ffffff;
        }

        a {
            text-decoration: none;
            color: #2e2d2d;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h3>ShoppingList</h3>
    <table>
        <tr>
            <td>▬Model▬ </td>
            <td>▬Name▬ </td>
            <td>▬Price(in ruble)▬</td>
            <td></td>
        </tr>
        @foreach (var shoes in Model)
        {
            <tr>
                <td>@shoes.Name</td>
                <td>@shoes.Company</td>
                <td>@shoes.Price</td>
                <td><a href="~/Buy/Buy/@shoes.ShoesId">▬Buy▬</a></td>
            </tr>
        }
        <a href="~/Home/Index">Back</a>
    </table>
</body>
</html>
